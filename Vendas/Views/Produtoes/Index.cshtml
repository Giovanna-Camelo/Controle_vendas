@model IEnumerable<Vendas.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create">Novo Cadastro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
			
                @Html.DisplayNameFor(model => model.Preço)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preço)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-sm btn-info" asp-route-id="@item.produtoID"><i class="bi bi-brush">editar</i></a> |
                    <a asp-action="Details" class="btn btn-sm btn-danger" asp-route-id="@item.produtoID"><i class="bi bi-eye">Detalhes</i></a> |
                    <a asp-action="Delete" class="btn btn-sm btn-warning" asp-route-id="@item.produtoID"><i class="bi bi-trash">Deletar</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
